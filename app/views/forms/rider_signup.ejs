<div id="FORM_rider_signup" class="card card_form pink">
    <h5 class="card-header">
        Rider Signup
    </h5>
    <div class="card-body">
        <div class="input-group mb-2">
            <input type="text" class="form-control" id="username" placeholder="username">
        </div>
        <% include ../components/form_components/pronouns.ejs %>
        <div class="input-group mb-2">
            <input type="text" class="form-control" id="first_name" placeholder="First Name">
        </div>
        <div class="input-group mb-2">
            <input type="text" class="form-control" id="last_name" placeholder="Last Name">
        </div>
        <div class="input-group mb-2">
            <input type="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="input-group mb-2">
            <input type="password" class="form-control" id="repeat_password" placeholder="Repeat Password">
        </div>
        <% include ../components/form_message.ejs %>
        <div class="text-right">
            <button class="btn btn-outline-secondary"
                onclick="applib.forms.rider_signup()">
            Sign Up
            </button>
        </div>
    </div>
</div>
